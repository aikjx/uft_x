{
  "name": "utf-star",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "张祥前统一场论可视化平台",
  "author": "张祥前",
  "license": "MIT",
  "keywords": ["统一场论", "物理学", "可视化", "数学公式", "Vue3", "TypeScript"],
  "repository": {
    "type": "git",
    "url": "https://github.com/utf-star/utf-star.git"
  },
  "homepage": "https://utf-star.com",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc && vite build",
    "build:analyze": "vue-tsc && vite build --mode analyze",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:style": "stylelint \"**/*.{css,scss,vue}\" --fix",
    "format": "prettier --write .",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky install",
    "clean": "rimraf dist node_modules/.vite",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "pinia": "^2.1.7",
    "d3": "^7.9.0",
    "@vueuse/core": "^10.9.0",
    "@headlessui/vue": "^1.7.19",
    "@heroicons/vue": "^2.1.1",
    "lodash-es": "^4.17.21",
    "dayjs": "^1.11.10",
    "three": "^0.162.0",
    "gsap": "^3.12.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/d3": "^7.4.3",
    "@types/lodash-es": "^4.17.12",
    "@types/three": "^0.162.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/tsconfig": "^0.5.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.6",
    "vue-tsc": "^2.0.7",
    
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "cssnano": "^6.1.0",
    
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint-plugin-vue": "^9.24.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-prettier": "^9.0.5",
    
    "vitest": "^1.4.0",
    "@vue/test-utils": "^2.4.5",
    "jsdom": "^24.0.0",
    "@vitest/ui": "^1.4.0",
    "@vitest/coverage-v8": "^1.4.0",
    
    "playwright": "^1.42.1",
    "@playwright/test": "^1.42.1",
    
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    
    "rollup-plugin-visualizer": "^5.12.0",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^0.19.7",
    "vite-plugin-windicss": "^1.9.3",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    
    "vitepress": "^1.0.1",
    "markdown-it": "^14.1.0",
    "shiki": "^1.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}